<%- include('../layouts/upper.ejs') %>
<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Editing <%= vehicle.type %> <%= vehicle.title %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
          <li class="breadcrumb-item active">
            <%= vehicle.category %> - <%= vehicle.title %>
          </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(vehicle.updatedAt).toUTCString() %></b>
      <b>VehicleId</b> <%= vehicle._id %>
    </div>
  </div>
</div>

<form
  action="/admin/editvehicle/<%= vehicle._id %>?_method=PUT"
  method="POST"
  enctype="multipart/form-data">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="category">Category</label>
      <input
        type="text"
        class="form-control"
        name="category"
        id="category"
        value="<%= vehicle.category %>"
        placeholder="Category"
        required />
    </div>

    <div class="col">
      <label for="type">Type</label>
      <input
        type="text"
        class="form-control"
        name="type"
        id="type"
        value="<%= vehicle.type %>"
        placeholder="Type"
        required />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        name="title"
        id="title"
        value="<%= vehicle.title %>"
        placeholder="Title"
        required />
    </div>
    <div class="col">
      <label for="transmission">Transmission</label>
      <input
        type="text"
        class="form-control"
        name="transmission"
        id="transmission"
        value="<%= vehicle.transmission %>"
        placeholder="Transmission"
        required />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="passengers">Passengers</label>
      <input
        type="number"
        class="form-control"
        name="passengers"
        id="passengers"
        value="<%= vehicle.passengers %>"
        placeholder="Passengers"
        required />
    </div>

    <div class="col">
      <label for="luggage">Luggage</label>
      <input
        type="number"
        class="form-control"
        name="luggage"
        id="luggage"
        value="<%= vehicle.luggage %>"
        placeholder="Luggage"
        required />
    </div>
  </div>

  <div class="form-group mb-4">
    <div class="col">
      <label for="image">Image</label>
      <div class="d-flex">
        <input
          type="file"
          class="form-control"
          name="image"
          id="image"
          value="<%= vehicle.imageUrl %>"
          required />
      </div>
    </div>

    <div class="col">
      <label for="about">Vehicle Features</label>
      <textarea
        class="form-control"
        name="about"
        id="about"
        cols="20"
        rows="8"
        placeholder="Vehicle Features">
<%= vehicle.about %></textarea
      >
    </div>
  </div>
  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Vehicle</button>
    <button
      type="button"
      class="btn btn-danger"
      data-bs-toggle="modal"
      id="deleteButton"
      data-bs-target="#deleteModal">
      Delete Vehicle
    </button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a Vehicle record.</div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          arial-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the vehicle record of
          <b class="fw-bold"><%= vehicle.type %> <%= vehicle.title %></b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/admin/editvehicle/<%= vehicle._id %>?_method=DELETE"
          method="POST"
          class="position-relative">
          <button type="submit" class="btn btn-primary">
            Yes, Remove Vehicle
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../layouts/lower.ejs') %>
