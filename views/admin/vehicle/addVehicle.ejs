<%- include('../layouts/upper.ejs') %>
<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Vehicle</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
          <li class="breadcrumb-item active">New Vehicle</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>UserId</b>
    </div>
  </div>
</div>

<form action="/admin/addVehicle" method="POST" enctype="multipart/form-data">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="category">Category</label>
      <input
        type="text"
        class="form-control"
        name="category"
        id="category"
        value=""
        placeholder="Category"
        required />
    </div>

    <div class="col">
      <label for="type">Type</label>
      <input
        type="text"
        class="form-control"
        name="type"
        id="type"
        value=""
        placeholder="Type"
        required />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="title">Title</label>
      <input
        type="text"
        class="form-control"
        name="title"
        id="title"
        value=""
        placeholder="Title"
        required />
    </div>
    <div class="col">
      <label for="transmission">Transmission</label>
      <input
        type="text"
        class="form-control"
        name="transmission"
        id="transmission"
        value=""
        placeholder="Transmission"
        required />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="passengers">Passengers</label>
      <input
        type="number"
        class="form-control"
        name="passengers"
        id="passengers"
        value=""
        placeholder="Passengers"
        required />
    </div>

    <div class="col">
      <label for="luggage">Luggage</label>
      <input
        type="number"
        class="form-control"
        name="luggage"
        id="luggage"
        value=""
        placeholder="Luggage"
        required />
    </div>
  </div>

  <div class="form-group mb-4">
    <div class="col">
      <label for="image">Image</label>
      <input
        type="file"
        class="form-control"
        name="image"
        id="image"
        required />
    </div>

    <div class="col">
      <label for="about">Vehicle Features</label>
      <textarea
        class="form-control"
        name="about"
        id="about"
        cols="20"
        rows="8"
        placeholder="Vehicle Features"></textarea>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add Vehicle</button>
  </div>
</form>
<%- include('../layouts/lower.ejs') %>
