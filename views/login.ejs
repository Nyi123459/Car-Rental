<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Car Rental</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <style>
      /* Reset some default styles */
      body,
      h1,
      h2,
      p,
      ul,
      li {
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Arial", sans-serif;
        background-color: #f4f4f4;
      }

      /* Section styles */
      section {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      /* Form container styles */
      .login-form-container {
        background-color: rgb(243, 157, 87);
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 300px;
      }

      /* Input styles */
      label {
        display: block;
        font-weight: bold;
        margin-bottom: 8px;
      }

      input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      .invalid {
        border-color: #ff4d4d; /* Change color for invalid input */
      }

      /* Button styles */
      .btn {
        background-color: #3498db;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-left: 105px;
        margin-top: 20px;
        margin-bottom: 10px;
      }

      /* Centered link styles */
      .centered {
        text-align: center;
        padding: 10px 15px;
      }

      /* Error message styles */
      .user-message {
        background-color: #ff4d4d;
        color: #fff;
        padding: 10px;
        border-radius: 4px;
        position: absolute;
      }

      .user-message--error {
        top: 0;
      }
    </style>
  </head>

  <body>
    <header>
      <form action="/" method="get"></form>
      <a href="/" class="logo"><img src="/images/jeep.png" alt="" /></a>
      <div class="bx bx-menu" id="menu-icon"></div>
      <ul class="navbar">
        <li><a href="/">Home</a></li>
        <li><a href="/vehicles">services</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/reviews">Reviews</a></li>
        <li><a href="/admin">Dashboard</a></li>
      </ul>
      <% if(!isAuthenticated) { %>
      <div class="header-btn">
        <a href="/signup">Sign Up</a>
        <a href="/login">Log In</a>
      </div>
      <% } else { %>
      <div class="dropdown-content">
        <form action="/logout" method="POST">
          <button class="btn" type="submit">Logout</button>
        </form>
      </div>
      <% } %>
    </header>

    <% if (errorMessage) { %>
    <div
      class="user-message user-message--error"
      style="margin-top: 100px; margin-left: 570px">
      <%= errorMessage %>
    </div>
    <% } %>
    <section>
      <div class="login-form-container">
        <form action="/login" method="POST">
          <div class="email">
            <label for="email">Email</label>
            <input
              class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
              type="email"
              class="form-control"
              name="email"
              id="email"
              value=""
              placeholder="Email"
              required />
          </div>

          <div class="col">
            <label for="email">Password</label>
            <input
              class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
              type="password"
              class="form-control"
              name="password"
              id="password"
              value=""
              placeholder="Password"
              required />
          </div>
          <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
          <a href="/reset">Forgot Password?</a>
        </div>
      </div>
    </section>
    <%- include('./includes/end.ejs') %>
  </body>
</html>
